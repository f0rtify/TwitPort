{
  "name": "TwitPort by AntMan & vacbans",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Reports twitter accounts",
  "browser_action" : {
    "default_icon": "unnamed.png",
    "default_title": "Click here to shoot the canon!"
  },
  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["https://twitter.com/*&tool=on"],
    "js": ["content.js"],
    "css": ["content.css"]
    
  }, {
    "matches" : ["*://*/*"],
    "js" : ["scrape.js"]
  }, {
    "matches": ["https://twitter.com/account/suspended"],
    "js" : ["suspended.js"]
  }],
  "permissions": [
    "storage",
    "notifications" ,
    "http://optools.anonops.com/twGetTarget.php?o=opparis"
  ],
  "options_page": "options/options.html"
   
}
